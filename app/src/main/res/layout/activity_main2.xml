<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/nrupul"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="#DE1717"
        android:paddingHorizontal="50dp"
        android:paddingVertical="30dp"
        android:text="Nrupul"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/nrupul"
        android:layout_alignParentRight="true"
        android:layout_gravity="end"
        android:background="#0E0481"
        android:paddingLeft="44dp"
        android:paddingTop="21dp"
        android:paddingRight="40dp"
        android:paddingBottom="20dp"
        android:text="Dev"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/prateek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nrupul"
        android:layout_marginTop="150dp"
        android:background="#B4A311"
        android:layout_centerInParent="true"
        android:text="Prateek"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:paddingTop="13dp"
        android:paddingRight="30dp"
        android:paddingBottom="35dp"
        android:paddingLeft="50dp"
        />
    <TextView
        android:id="@+id/aman"
        android:layout_below="@id/prateek"
        android:layout_marginTop="150dp"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:text="Aman"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:background="#920495"
        android:paddingTop="23dp"
        android:paddingBottom="8dp"
        android:paddingLeft="44dp"
        android:paddingRight="50dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="#3F0D66"
        android:text="Rahul"
        android:paddingBottom="15dp"
        android:paddingTop="11dp"
        android:paddingLeft="60dp"
        android:paddingRight="61dp"
        android:textColor="@color/white"
        android:textSize="30dp" />

</RelativeLayout>